pipeline {
    agent any

    environment {
        TOMCAT_SERVER = '10.0.11.178'           // Tomcat server private IP
        SSH_CRED_ID   = 'Devops_MJ_cred'        // Jenkins SSH credentials ID
        TOMCAT_PATH   = '/opt/tomcat/webapps'   // Tomcat webapps directory
        TOMCAT_SVC    = 'tomcat10'              // Tomcat service name
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Amogh902/DevOps_MJ_code.git'
            }
        }

        stage('Build WAR') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                sshagent([SSH_CRED_ID]) {
                    sh """
                        WAR_FILE=\$(ls target/*.war | head -n1)
                        echo "WAR built: \$WAR_FILE"

                        # Copy WAR to Tomcat server
                        scp -o StrictHostKeyChecking=no \$WAR_FILE ec2-user@${TOMCAT_SERVER}:/tmp/ROOT.war

                        # Deploy WAR on Tomcat
                        ssh -o StrictHostKeyChecking=no ec2-user@${TOMCAT_SERVER} '
                            sudo systemctl stop ${TOMCAT_SVC} || true
                            sudo rm -rf ${TOMCAT_PATH}/ROOT ${TOMCAT_PATH}/ROOT.war
                            sudo mv /tmp/ROOT.war ${TOMCAT_PATH}/ROOT.war
                            sudo chown tomcat:tomcat ${TOMCAT_PATH}/ROOT.war
                            sudo chmod 644 ${TOMCAT_PATH}/ROOT.war
                            sudo systemctl start ${TOMCAT_SVC}

                            # Wait until ROOT directory exists (deployment finished)
                            TIMEOUT=120
                            while [ ! -d "${TOMCAT_PATH}/ROOT" ] && [ \$TIMEOUT -gt 0 ]; do
                                sleep 5
                                TIMEOUT=\$((TIMEOUT-5))
                            done

                            if [ ! -d "${TOMCAT_PATH}/ROOT" ]; then
                                echo "ERROR: ROOT app did not unpack correctly!"
                                exit 1
                            fi

                            echo "Deployment finished successfully."
                        '
                    """
                }
            }
        }

        stage('Verify via Proxy') {
            steps {
                sh """
                    HTTP_CODE=\$(curl -s -o /dev/null -w "%{http_code}" http://${TOMCAT_SERVER}/)
                    echo "HTTP code from Tomcat: \$HTTP_CODE"
                    if [ "\$HTTP_CODE" -ne 200 ]; then
                        echo "ERROR: App not reachable!"
                        exit 1
                    fi
                """
            }
        }
    }

    post {
        success {
            echo "✅ Deployment successful! Access the app via: http://${TOMCAT_SERVER}/"
        }
        failure {
            echo "❌ Deployment failed. Check Jenkins console logs."
        }
    }
}
