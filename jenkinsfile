pipeline {
    agent any

    environment {
        APP_SERVER_IP = '10.0.11.178'       // Private IP of app-server
        SSH_CRED_ID  = 'Devops_MJ_cred'     // Jenkins SSH credential ID
        TOMCAT_PATH  = '/opt/tomcat/webapps'
        TOMCAT_SVC   = 'tomcat10'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Amogh902/DevOps_MJ_code.git'
            }
        }

        stage('Build WAR') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Deploy WAR to App Server') {
            steps {
                sshagent([SSH_CRED_ID]) {
                    sh """
                        WAR_FILE=\$(ls target/*.war | head -n1)
                        echo "Deploying \$WAR_FILE to ${APP_SERVER_IP}"

                        # Copy WAR to app-server /tmp
                        scp -o StrictHostKeyChecking=no \$WAR_FILE ec2-user@${APP_SERVER_IP}:/tmp/

                        # Connect and deploy
                        ssh -o StrictHostKeyChecking=no ec2-user@${APP_SERVER_IP} '
                            sudo mkdir -p ${TOMCAT_PATH} &&
                            sudo rm -rf ${TOMCAT_PATH}/ROOT ${TOMCAT_PATH}/ROOT.war &&
                            sudo mv /tmp/*.war ${TOMCAT_PATH}/ROOT.war &&
                            sudo chown -R tomcat:tomcat ${TOMCAT_PATH} &&
                            sudo systemctl restart ${TOMCAT_SVC}
                        '
                    """
                }
            }
        }
    }

    post {
        success {
            echo "App deployed successfully! Access via Proxy: http://<PROXY_PUBLIC_IP>/"
        }
        failure {
            echo "Deployment failed. Check console logs."
        }
    }
}
