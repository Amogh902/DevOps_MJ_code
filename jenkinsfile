pipeline {
    agent any

    environment {
        APP_SERVER_IP = '10.0.11.178'
        SSH_CRED_ID   = 'Devops_MJ_cred'
        TOMCAT_PATH   = '/opt/tomcat/webapps'
        TOMCAT_SVC    = 'tomcat10'
        PROXY_URL     = 'http://10.0.40.132/'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Amogh902/DevOps_MJ_code.git'
            }
        }

        stage('Build WAR') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Deploy WAR') {
            steps {
                sshagent([SSH_CRED_ID]) {
                    sh """
                        WAR_FILE=\$(ls target/*.war | head -n1)
                        echo "WAR built: \$WAR_FILE"

                        # Copy WAR to app-server
                        scp -o StrictHostKeyChecking=no \$WAR_FILE ec2-user@${APP_SERVER_IP}:/tmp/ROOT.war

                        # Deploy on app-server
                        ssh -o StrictHostKeyChecking=no ec2-user@${APP_SERVER_IP} '
                            sudo systemctl stop ${TOMCAT_SVC} || true
                            sudo rm -rf ${TOMCAT_PATH}/ROOT ${TOMCAT_PATH}/ROOT.war
                            sudo mv /tmp/ROOT.war ${TOMCAT_PATH}/ROOT.war
                            sudo chown -R tomcat:tomcat ${TOMCAT_PATH}
                            sudo chmod -R 755 ${TOMCAT_PATH}
                            sudo systemctl start ${TOMCAT_SVC}
                        '

                        echo "Waiting 30 seconds for Tomcat to unpack ROOT.war..."
                        sleep 30
                    """
                }
            }
        }

        stage('Verify Deployment via Proxy') {
            steps {
                sh '''
                    HTTP_CODE=$(curl -s -o /dev/null -w "%{http_code}" ${PROXY_URL})
                    if [ "$HTTP_CODE" -ne 200 ]; then
                        echo "ERROR: App not reachable via proxy, HTTP code $HTTP_CODE"
                        exit 1
                    fi
                    echo "App deployed successfully via proxy!"
                '''
            }
        }
    }

    post {
        success {
            echo "✅ Deployment completed!"
        }
        failure {
            echo "❌ Deployment failed!"
        }
    }
}
